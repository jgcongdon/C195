<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="732.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.Reports">
   <children>
      <AnchorPane layoutX="630.0" layoutY="25.0">
         <children>
            <Label text="Reports" />
         </children>
      </AnchorPane>
      <AnchorPane layoutX="336.0" layoutY="50.0">
         <children>
            <HBox>
               <children>
                  <Label text="Total number of customer appointments by type and month:">
                     <HBox.margin>
                        <Insets right="10.0" top="35.0" />
                     </HBox.margin>
                  </Label>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Month" textAlignment="CENTER" GridPane.halignment="CENTER" />
                        <Label text="Type" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                        <Label text="Total" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
                        <ComboBox fx:id="monthCombo" onAction="#onActonMonthCombo" prefWidth="150.0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="typeCombo" onAction="#onActionTypeCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="appointmentsTotalLabel" prefWidth="50.0" style="-fx-border-color: Black;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets left="25.0" />
                           </GridPane.margin></Label>
                     </children>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="519.0" layoutY="125.0">
         <children>
            <HBox>
               <children>
                  <Label text="Schedule by Contact: " />
                  <ComboBox fx:id="contactCombo" prefWidth="150.0" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="60.0" layoutY="175.0">
         <children>
            <TableView prefWidth="1200.0">
               <columns>
                  <TableColumn text="Appointment ID" />
                  <TableColumn prefWidth="52.0" text="Title" />
                  <TableColumn prefWidth="75.0" text="Description" />
                  <TableColumn prefWidth="75.0" text="Location" />
                  <TableColumn prefWidth="75.0" text="Contact" />
                  <TableColumn prefWidth="75.0" text="Type" />
                  <TableColumn prefWidth="75.0" text="Start date" />
                  <TableColumn prefWidth="75.0" text="Start time" />
                  <TableColumn prefWidth="75.0" text="End date" />
                  <TableColumn prefWidth="75.0" text="End time" />
                  <TableColumn prefWidth="75.0" text="Customer ID" />
                  <TableColumn prefWidth="75.0" text="User ID" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="444.0" layoutY="600.0">
         <children>
            <HBox>
               <children>
                  <Label text="Total number of customers by country:">
                     <HBox.margin>
                        <Insets right="10.0" top="35.0" />
                     </HBox.margin>
                  </Label>
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Country" textAlignment="CENTER" GridPane.halignment="CENTER" />
                        <Label text="Total" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                        <ComboBox fx:id="countryCombo" onAction="#onActionCountryCombo" prefWidth="150.0" GridPane.rowIndex="1" />
                        <Label fx:id="customersTotalLabel" prefWidth="50.0" style="-fx-border-color: Black;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets left="25.0" />
                           </GridPane.margin></Label>
                     </children>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="612.0" layoutY="675.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionMainMenu" text="Main Menu" />
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets left="15.0" />
   </padding>
</AnchorPane>
